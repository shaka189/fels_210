<div class="row">
  <div class="col-md-12">
    <div class="form-exam  col-md-offset-3">
      <%= form_for :lesson, url: lessons_url do |f| %>
      <div class="col-md-4">
        <%= collection_select :lesson, :category_id, category_collection, :id , :name,
                              {:include_blank => (t :select_category)}, class: "form-control button"  %>
      </div>
      <div class="col-md-4">
        <%= f.submit (t :create_lesson), class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
    <br/><br/><br/>
    <h1 class="text-center"><%= t :list_lesson %></h1>

    <table class="table table-hover">
      <tr>
        <th><%= t :create_at %></th>
        <th><%= t :category %></th>
        <th><%= t :status %></th>
        <th><%= t :score %></th>
        <th></th>
      </tr>
      <tbody id="collection">
      <%= render partial: "lesson", collection: @lessons %>
      </tbody>
    </table>
</div>
