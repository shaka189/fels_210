<tr>
  <td><%= lesson.created_at %></td>
  <td><%= lesson.category.name %></td>
  <td>
    <% if lesson.status %>
      <span class="label label-success">
        <%= t "finished" %>
      </span>
    <% else %>
      <span class="label label-info">
        <%= t "open" %>
      </span>
    <% end %>
  </td>
  <td><%= lesson.correct.size %> / <%= lesson.words.size %></td>
  <td>
    <% if lesson.status %>
      <%= link_to t("view"), lesson_path(lesson), class: "btn btn-primary" %>
    <% else %>
      <%= link_to t("start"), lesson_path(lesson), class: "btn btn-primary" %>
    <% end %>
  </td>
</tr>
