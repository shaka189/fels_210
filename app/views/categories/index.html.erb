<div class="col-md-10 col-md-offset-1">
  <div class="table-responsive">
    <div class="row">
    <h1><%= t"category" %></h1>
      <div class="col-md-8 col-md-offset-2">
        <%= search_form_for @q do |f| %>
          <div class="col-md-6"><%= f.text_field :name_cont, class: "form-control", placeholder: t("fillname") %></div>
          <div class="col-md-4"><%= f.submit t("search"), class: "btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
    <div class="col-md-10 col-md-offset-1">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t ".name" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "category", collection: @categories %>
      </tbody>
    </table>
    <%= paginate @categories %>
  </div>
  </div>
</div>
