<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 50 %>
      </h1>
      <p>
        <%= @user.email %>
      </p>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <%= render 'follow_form' if user_signed_in? %>
  <br/><br/><br/><br/> <br/><br/><br/><br/>
   <h1 class="text-center"><%= t "lessons" %></h1>
<table class="table table-hover">
  <tr>
    <th><%= t "create_at" %></th>
    <th><%= t "category" %></th>
    <th><%= t "status" %></th>
    <th><%= t "score" %></th>
    <th></th>
  </tr>
  <%= render partial: "lessons/lesson", collection: @lessons  %>
</table>
<%= paginate @lessons %>

</div>
