<tr>
  <td><%= word.content %></td>
  <td><%= word.category.name %></td>
  <td><%= word.answers.answer_correct.content %></td>
  <td><%= link_to edit_admin_word_path(word) do %>
    <span class="glyphicon glyphicon-edit"></span>
  <% end %></td>
  <td><%= link_to admin_word_path(word), method: :delete, data: {confirm: t(".you_sure")} do %>
    <span class="glyphicon glyphicon-trash"></span>
  <% end %></td>
</tr>
