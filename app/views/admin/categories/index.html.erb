<div class="col-md-9 col-md-offset-3">
  <div class="col-md-12">
    <h1><%= t"category" %></h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-3">
        <%= search_form_for @q do |f| %>
          <div class="col-md-6"><%= f.text_field :name_cont, class: "form-control", placeholder: t("fillname") %></div>
          <div class="col-md-4"><%= f.submit t("search"), class: "btn btn-primary" %></div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <%= link_to t("create_category"), new_admin_category_path, class: "btn btn-info"%>
      <br/><br/>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th><%= t ".name" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "category", collection: @categories %>
          </tbody>
        </table>
        <%= paginate @categories %>
      </div>
    </div>
  </div>
</div>
