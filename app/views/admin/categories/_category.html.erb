<tr>
  <td><%= link_to category.name, category_path(category) %></td>
  <td><%= link_to edit_admin_category_path(category) do %>
    <span class="glyphicon glyphicon-edit"></span>
  <% end %></td>
  <td><%= link_to admin_category_path(category), method: :delete, data: {confirm: t("you_sure")} do %>
    <span class="glyphicon glyphicon-trash"></span>
  <% end %></td>
</tr>
