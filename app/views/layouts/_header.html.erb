<header>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to t(".exam"), root_path, id: "logo" %>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.nil? %>
          <ul class="navbar-nav">
          <li class="nav-item"><%= link_to t(".login"), new_user_session_path, class: "btn btn-outline-primary" %></li>
          <li class="nav-item"><%= link_to t(".sign_up"), new_user_registration_path, class: "btn btn-outline-primary" %></li>
        </ul>
        <% else %>
          <li id= "user_profile" class="dropdown">
            <div class="dropdown-toggle" data-toggle="dropdown">
              <%= gravatar_for current_user, size: 40 %>
            </div>
            <ul class="dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <span class="glyphicon glyphicon-user"></span><%= t(".profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <span class="glyphicon glyphicon-log-out"></span><%= t(".logout") %>
                <% end %>
              </li>
              <li><%= link_to t(".setting"), edit_user_registration_path(current_user) %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
